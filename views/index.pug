extends layout

block content
    div.group.head
        div.picture
            a(href=image, target="_blank"): img(src=image)
        div.summary
            h1.full-name=title
            div.role #{positions[currentPositionIndex].role} at #{companies[positions[currentPositionIndex].companyId].officialName}
            p.location Location: #{address}
            p.phone Phone: #{phone}
            p.email Email: #{email}
            p.skype Skype: #{skype}
            p.options
                a(href=linkedin, target="_blank") LinkedIn Profile
                span &nbsp|&nbsp
                a(href="pdf") PDF
                span &nbsp|&nbsp
                a(href="download") Download

    div.group.summary
        h3.group-title Summary
        p.description=summary

    div.group.experience
        h3.group-title Experience
        div.position
            for position in positions
                p.title #{position.role} at&nbsp;
                    a(href=companies[position.companyId].contactDetails.website) #{companies[position.companyId].officialName}
                div.period #{position.from} - #{position.to}
                p.description=position.description

    div.group.education
        h3.group-title Education
        for school in schools
            div.school
                div.picture
                    a(href=school.url, target="_blank").badge: img(src=school.logo)
                div.summary
                    p.title=school.name
                    p #{school.from} - #{school.to}
                    p=school.graduationLevel

    div.group.certificates
        h3.group-title Certifications
        for certificate in certificates
            div.certificate
                div.picture
                    a(href=certificate.url, target="_blank").badge: img(src=certificate.logo)
                div.summary
                    p.title=certificate.title
                    p.validity=certificate.issued

    div.group.patents
        h3.group-title Patents
        for patent in patents
            div.patent
                div.summary
                    p.title=patent.title
                    p.validity=patent.issued
                    p
                        a(href=patent.url) See patent

    div.group.projects
        h3.group-title Projects
        for project in projects
            div.project
                div.summary
                    p.name=project.name
                    p.description=project.description
