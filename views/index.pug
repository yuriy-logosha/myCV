extends layout

block content
    div.head
        div.picture
            a(href=image): img(src=image)
        div.summary
            h1= title
            p #{positions[currentPositionIndex].role} at #{positions[currentPositionIndex].company}
            p.phone=phone
            p.email=email
            p
                a(href=linkedin) LinkedIn Profile

    br
    hr
    div.summary

        h3.group-title Summary
        div.summary=summary

    br
    hr
    div.experience
        h3.group-title Experience
        div.position
            for position in positions
                div.title #{position.role} at #{position.company}
                div.period #{position.from} - #{position.to}
                span.description=position.description

    br
    hr
    div.education
        h3.group-title Education
        div.school
            for school in schools
                div.title=school.name
                div.period #{school.from} - #{school.to}
                span.description=school.graduationLevel

    br
    hr
    div.certificates
        h3.group-title Certifications
        div.certificate
            for certificate in certificates
                div.picture
                    a(href=certificate.url).badge: img(src=certificate.pic)
                div.body
                    div.title
                        div.title=certificate.title
                        div.validity=certificate.issued


